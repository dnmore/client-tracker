generator client {
  provider = "prisma-client-js"

  
}

datasource db {
  provider = "postgresql"
}

/// =======================
/// ENUMS
/// =======================

enum Role {
  OWNER
  VIEWER
}

enum Plan {
  FREE
  PRO
}

enum DealStage {
  NEW
  QUALIFIED
  PROPOSAL
  WON
  LOST
}

/// =======================
/// MODELS
/// =======================

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  role           Role     @default(OWNER)
  plan           Plan     @default(FREE)
  createdAt      DateTime @default(now())

  @@map("users")
}

model Lead {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  company   String?
  createdAt DateTime @default(now())

  deals     Deal[]

  @@map("leads")
}

model Deal {
  id       String    @id @default(uuid())
  name     String 
  leadId   String
  amount   Int
  stage    DealStage
  createdAt DateTime @default(now())

  lead     Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@map("deals")
}